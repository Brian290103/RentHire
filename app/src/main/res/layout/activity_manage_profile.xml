<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ManageProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_light_ring"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/bellota_bold"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="@color/light"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/user2" />

            <TextView
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/baseline_edit_24"
                android:drawablePadding="12dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/bellota_regular"
                android:text="Edit Profile"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/hithere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/bellota_bold"
                android:text="Hi there Mercy!"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/bellota_bold"
                android:text="Sign Out"
                android:id="@+id/sign_out"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_bg"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bellota_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:text="FullName" />

                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:enabled="false"
                    android:fontFamily="@font/bellota_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:text="Mercy Tonui" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_bg"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bellota_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/bellota_regular"
                    android:paddingStart="5dp"
                    android:enabled="false"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:text="tonuimercy@gmail.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_bg"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bellota_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:text="Id Number" />

                <EditText
                    android:id="@+id/idno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:fontFamily="@font/bellota_regular"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:enabled="false"
                    android:paddingBottom="10dp"
                    android:text="40256459" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_bg"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:text="Phone" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:enabled="false"

                    android:text="759646665" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_bg"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:text="Password" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:enabled="false"
                    android:paddingBottom="10dp"
                    android:text="759646665" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_bg"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:text="Confirm Password" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_bg"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:enabled="false"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:text="759646665" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_white_bg"
                android:fontFamily="@font/bellota_bold"
                android:padding="15dp"
                android:text="Update Record"
                android:textAllCaps="false"
                android:textColor="@color/dark"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>